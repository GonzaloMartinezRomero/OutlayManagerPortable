<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
               xmlns:local="clr-namespace:OutlayManagerPortable.Converter"
             x:Class="OutlayManagerPortable.MainPage"
             Title="Transaction Outlay Portable"
             x:Name="MainPageContent">
    <ContentPage.Resources>
        <ResourceDictionary>
            <local:DoubleToAmountConverter x:Key="DoubleToAmount"></local:DoubleToAmountConverter>
            <local:TypeToImageConverter x:Key="TypeToImage"></local:TypeToImageConverter>
        </ResourceDictionary>
    </ContentPage.Resources>
    
    <ContentPage.Content>

    <Frame BorderColor="LightGray"
       HasShadow="True"    
       HeightRequest="120"
       WidthRequest="120">
            <Frame.Background>
                <LinearGradientBrush StartPoint="0,0"
                             EndPoint="1,0">
                    <GradientStop Color="Lavender"
                          Offset="0.1"/>
                    <GradientStop Color="DarkTurquoise"
                          Offset="1.0"/>
                </LinearGradientBrush>
            </Frame.Background>

            <ScrollView>
                <StackLayout Orientation="Vertical" Spacing="10" >

                    <StackLayout Orientation="Horizontal" Spacing="50" x:Name="saveButtonView" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand">
                                                
                        <Button Text="New Transaction" Clicked="AddNewTransactionEvent" 
                                BorderColor="Black" WidthRequest="200"
                                BorderWidth="2" Background="Lavender" CornerRadius="25"/>
                        
                    </StackLayout>

                    <StackLayout x:Name="loadingView" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand">
                        <ActivityIndicator x:Name="loadingIndicador"
                           IsRunning="True"                                      
                           Color="Black"/>
                    </StackLayout>

                    <StackLayout x:Name="transactionListViewContainer">
                        <Label Text="     Outlays Transactions     " FontSize="Title" FontAttributes="Bold" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand" TextColor="Black" BackgroundColor="LavenderBlush" Opacity="0.8" Background="lavender"/>                    
                    
                    <Label x:Name="NotificationLabel" Text="" IsVisible="false" FontAttributes="Bold,Italic" TextColor="Red"/>
                    
                    <ListView x:Name="TransactionListView"
                            ItemTapped="ItemSelectedEvent"
                            Margin="10"
                            FlowDirection="LeftToRight"
                            HorizontalScrollBarVisibility="Always" 
                            SeparatorVisibility="Default">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <ViewCell>
                                    <Grid>
                                        <Image Source="{Binding Type,Converter={StaticResource TypeToImage} }" Grid.Row="0" Grid.Column="0"/>
                                        <Label Text="{Binding Date, StringFormat='{0:dd/MM/yyyy}'}" Grid.Row="0" Grid.Column="1" FontAttributes="Bold"/>
                                        <Label Text="{Binding Code}" Grid.Row="0" FontAttributes="Bold" Grid.Column="2"/>
                                        <Label Text="{Binding Amount,Converter={StaticResource DoubleToAmount}}" Grid.Row="0" Grid.Column="3" FontAttributes="Bold" />
                                        <Label Text="{Binding Description}" Grid.Row="0" Grid.Column="4" FontAttributes="Italic,Bold"/>
                                    </Grid>
                                </ViewCell>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                    </StackLayout>
                </StackLayout>
        </ScrollView>
    </Frame>

    </ContentPage.Content>
    
</ContentPage>
